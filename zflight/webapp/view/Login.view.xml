<mvc:View controllerName="cust.matea.sap.flight.zflight.controller.Login" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
    <Page title="{i18n>homePageTitle}" titleAlignment="Center">
        <content>
            <FlexBox alignItems="Center" justifyContent="Center">
                <Button id="pilot" class="myCustomButton sapUiSmallMarginEnd" text="{i18n>pilotaVagyok}" width="200px" icon="sap-icon://business-card" press=".onPilot" />
                <Button id="traveller" class="sapUiSmallMarginBegin" text="{i18n>utasVagyok}" width="200px" icon="sap-icon://suitcase" press=".onTraveller" />
            </FlexBox>
        </content>
    </Page>
</mvc:View>
