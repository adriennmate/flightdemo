<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <TableSelectDialog
        noDataText="{i18n>noAirport}"
        title="{i18n>airportSearch}"
        search=".handleSearchIata"
        confirm=".handleValueHelpCloseIataFrom"
        cancel=".handleValueHelpCloseIateFrom"
        growing="false"
        contentWidth="100px"
        contentHeight="500px"
        resizable="true"
        items="{
			path : '/iataSearchSet',  
			sorter : {
				path : 'City',
				descending : false
			}
		}"
    >
        <ColumnListItem selected="{selected}">
            <cells>
                <ObjectIdentifier title="{Airport}" />
                <Text text="{City}" />
                <Text text="{Country}" />
            </cells>
        </ColumnListItem>
        <columns>
            <Column width="3em">
                <header>
                    <Text text="{i18n>airport}" />
                </header>
            </Column>
            <Column width="7em" demandPopin="true">
                <header>
                    <Text text="{i18n>city}" />
                </header>
            </Column>
            <Column width="4em" demandPopin="true">
                <header>
                    <Text text="{i18n>country}" />
                </header>
            </Column>
        </columns>
    </TableSelectDialog>
</core:FragmentDefinition>
